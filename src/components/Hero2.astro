---
import { Image } from "astro:assets";
import hero from "@assets/images/hero-about.jpg";
---

<section class="full-bleed">
  <Image src={hero} alt="" />
</section>

<style>
  .full-bleed {
    grid-column: full-bleed-start / full-bleed-end;
    display: grid;
  }

  .full-bleed > img {
    grid-column: full-bleed-start / full-bleed-end !important;
    width: 100%;
    object-fit: cover;
    display: block;
  }
</style>
