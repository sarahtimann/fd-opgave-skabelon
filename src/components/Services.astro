---
//@ts-nocheck
import servicesData from "@data/services.json";
console.log(servicesData);
---

<ul>
  {
    servicesData.services.map((service) => (
      <li>
        <h2>{service.title}</h2>
        <p>{service.description}</p>
        <a href="#0">{service.buttonText}</a>
      </li>
    ))
  }
</ul>

<style>

  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 20px;
    padding: 20px 0 20px 0;
    max-width: 1200px;
    margin: 0 auto;
    list-style: none;
  }

li {
  display: flex;
padding: 46px;
flex-direction: column;
justify-content: center;
gap: 10px;
flex: 1 0 0;

border-radius: 20px;
border: 1px solid rgba(255, 255, 255, 0.20);

background: rgba(38, 38, 38, 0.90);

backdrop-filter: blur(16px);
}

h2 {
  color: var(--h2-color-light);

font-family: Cabin;
font-size: 25px;
font-style: normal;
font-weight: 600;
line-height: 29px;
}

p {
  color: var(--p-color-light);

font-family: Lato;
font-size: 16px;
font-style: normal;
font-weight: 400;
line-height: 23.6px;
margin-top: .5rem;
}

a {
  display: inline-flex;
  flex: 0 0 auto;
  align-self: flex-start;
  padding: 12px 20px;
  align-items: center;
  gap: 10px;

  border-radius: 55px;
  background: #151515;

  color: var(--p-color-light);
  text-align: center;
  font-family: Lato;
  font-size: 18px;
  font-style: normal;
  font-weight: 600;
  line-height: 28.8px;
  text-decoration: none;

  margin-top: 1.5rem;
}



  @layer components {
    li {
    }
  }
</style>
