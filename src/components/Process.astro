<style>
  section {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    padding-top: 4rem;
    padding-bottom: 4rem;
  }

  .text-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .svg-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .svg-container .svg-content {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .img-container {
    display: grid;
    gap: 1rem;
  }

  .img-container img {
    width: 100%;
    height: auto;
    object-fit: cover;
    border-radius: 20px;
  }

  h2 {
    color: var(--h2-color-dark);
    font-size: var(--h2-font-size);
    font-family: Cabin;
  }

  p {
    color: var(--p-color-dark);
    font-size: var(--p-font-size);
    font-family: Lato;
  }

  .last-p {
    padding-bottom: 1rem;
  }

  .uppercase {
    text-transform: uppercase;
  }

  img {
    border-radius: 20px;
  }

  .img-container {
    padding-top: 3rem;
  }

  .img-pink {
    grid-column: 1 / span 1;
    grid-row: 1 / span 2;
    object-fit: cover;
    width: 100%;
    height: 100%;
  }

  .img-computer {
    grid-column: 2 / span 1;
    grid-row: 1 / span 1;
    object-fit: cover;
    width: 100%;
    height: 100%;
  }

  .img-hands {
    grid-column: 2 / span 1;
    grid-row: 2 / span 1;
    object-fit: cover;
    width: 100%;
    height: 100%;
  }

  .text-content .svg-content {
    display: flex;
    align-items: center;
    gap: 10px;
    flex-wrap: wrap;
    padding-bottom: 1.5rem;
  }
</style>
