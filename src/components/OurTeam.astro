<style>
  section {
    display: grid;
    padding-top: 4rem;
    padding-bottom: 4rem;
  }

  section > p:first-of-type {
    text-transform: uppercase;
  }

  section > p,
  section > h2 {
    width: 620px;
  }

  .team-members {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  img {
    border-radius: 20px;
  }

  h2 {
    font-family: Cabin;
    font-size: var(--h2-font-size);
    font-style: normal;
    font-weight: 700;
    line-height: 46.08px;
    margin-top: 0.5rem;
    margin-bottom: 1rem;
  }

  p {
    font-family: Lato;
    font-size: var(--p-font-size);
    font-style: normal;
    font-weight: 400;
    line-height: 23.6px;
    color: var(--p-color-dark);
  }

  h5 {
    font-family: Cabin;
    font-size: 30px;
    font-style: normal;
    font-weight: 600;
    line-height: 23.2px;
    margin-top: 1rem;
    margin-bottom: 0.5rem;
    color: var(--h2-color-dark);
  }

  div p,
  div h5 {
    text-align: center;
    padding-top: 0.5rem;
  }
</style>
