  :root {
    --content-width: 50rem;
  }

  main {
    padding-block: 4rem;
    display: grid;
    grid-template-columns:
      [full-start]
      1fr
      [content]
      minmax(0, var(--content-width))
      1fr
      [full-end];
    column-gap: 1rem;

    > * {
      grid-column: content;
    }

    .full {
      grid-column: full;
      display: grid;
      grid-template-columns: inherit;
      row-gap: 3rem;

      > * {
        grid-column: content;
      }

      > ul {
        scroll-snap-type: x mandatory;
        grid-column: full;
        padding-inline: max(1rem, 50% - var(--content-width) / 2);
        padding-block-end: 1rem;

        li {
          scroll-snap-align: center;
        }
      }
    }
  }

  ul {
    display: flex;
    gap: 1rem;
    overflow-x: auto;
    list-style: none;

    li {
      flex-basis: min(400px, 90%);
      flex-shrink: 0;
      background: #ebebeb;
      color: #595566;
      border-radius: 8px;
      font-size: 1rem;
      padding: 2.75rem 2.1875rem;
      align-self: start;

      h3 {
        font-weight: 700;
        font-size: 1.5625rem;
      }
    }

    li:hover {
      background-color: #181818;
      color: #ffcc4a;
    }

    /* li::marker {
    text-decoration: none;
  } */
  }

  h2,
  h3 {
    all: revert;
    color: #181818;
    margin-block: 0 0.625rem;
    line-height: 1.125;
  }

  h2 {
    font-size: 2.8125rem;
  }
</style>
