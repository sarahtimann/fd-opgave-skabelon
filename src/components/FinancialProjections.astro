---
//@ts-nocheck
import financialProjections from "@data/financialProjections.json";
import DynamicIcon from "./helpers/DynamicIcon.astro";
---

<section class="full-bleed">
  <div>
    <h2>{financialProjections.title}</h2>
    <p>{financialProjections.subtitle}</p>
  </div>
  <ul>
    {
      financialProjections.values.map((projection) => (
        <li>
          <DynamicIcon
            name={projection.icon}
            width={50}
            height={50}
            class="icon"
          />
          <h6>{projection.title}</h6>
          <p>{projection.description}</p>
          <a href="#0">{projection.buttonText}</a>
        </li>
      ))
    }
  </ul>
</section>

<style>
  section {
    padding-top: 4rem;
    padding-bottom: 4rem;
    background-color: var(--bg-gray);
  }

  li {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 10px;

    border-radius: 20px;
    border: 1px solid #eaeaea;
    background: var(--bg-gray);
  }

  ul {
    display: flex;
    gap: 1rem;
    overflow-x: auto;
    list-style: none;

    li {
      flex-basis: min(400px, 90%);
      flex-shrink: 0;
      background: #ebebeb;
      color: #595566;
      border-radius: 8px;
      padding: 2.75rem 2.1875rem;
      align-self: start;
    }
  }

  h2 {
    color: var(--h2-color-dark);
    font-size: var(--h2-font-size);
    font-family: var(--h2-font-family);
    font-weight: 700;
    line-height: 52.2px;
    padding-bottom: 0.5rem;
  }

  h6 {
    color: var(--h2-color-dark);
    font-family: var(--h2-font-family);
    font-size: 25px;
    font-style: normal;
    font-weight: 600;
    line-height: 32.5px;
  }

  p {
    color: var(--p-color-grey);
    font-size: var(--p-font-size);
    font-family: var(--p-font-family);
    font-style: normal;
    font-weight: 400;
    line-height: 23.6px;
    padding-bottom: 3rem;
  }

  div {
    max-width: 620px;
  }
</style>
